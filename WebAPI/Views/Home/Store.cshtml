
@{
    ViewBag.Title = "Store";
    if (!(ViewContext.ViewBag.Title == "Login"))
    {
        Layout = "~/Views/Shared/_layout.cshtml";
      
    }
}

<link href="//cdn.datatables.net/1.10.12/css/jquery.dataTables.min.css" rel="stylesheet" />
<script src="//ajax.googleapis.com/ajax/libs/jquery/1.11.0/jquery.min.js"></script>
<script src="//code.jquery.com/jquery-1.12.3.js"></script>
<script src="//cdn.datatables.net/1.10.12/js/jquery.dataTables.min.js"></script>

<script>
    $(document).ready(function () {
                $("#tableStore").show();
                $.ajax({
                    url: 'http://localhost:60933/api/store/',
                    dataType: "json",
                    type: "Get",
                    

                    success: function (data) {
                        var tr;
                        
                        console.log(data);
                        for (var i = 0; i < data.length; i++) {
                            tr = tr + "<tr>";
                            tr = tr + "<td>" + data[i].STORE_CD + "</td>";
                            tr = tr + "<td>" + data[i].STORE_NAME + "</td>";
                            tr = tr + "<td>" + data[i].INSERT_USER + "</td>";
                            tr = tr + "<td>" + data[i].INSERT_DATE + "</td>";
                            tr = tr + "<td>" + data[i].UPDATE_USER + "</td>";
                            tr = tr + "<td>" + data[i].UPDATE_DATE + "</td>";
                            tr = tr + "<td>" + data[i].DEL_FLAG + "</td>";
                            tr = tr + "<td>" + "<button> Edit</button>"   +"</td>"
                            tr = tr + "</tr>";
                        }
                        $('#tableStore').append(tr);
                    },
                    error: function (xhr) {
                        alert('No valid Data');
                    }
                });

        
    });

</script>
<div>
    <form>
        <div>
            <button type="button" class="btn btn-danger" id="addStore" data-toggle="modal" data-target="#staticBackdropStore">Add</button>
        </div>

        @*ModalAddStore*@
        <div class="modal fade" id="staticBackdropStore" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Add store</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <table class="table table-borderless">
                            <tr>
                                <th scope="row">STORE CD</th>
                                <td><input type="text" id="storeCD" class="text-primary" /></td>
                            </tr>
                            <tr>
                                <th scope="row">STORE NAME</th>
                                <td><input type="text" id="storeName" class="text-primary" /></td>
                            </tr>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>


        <div>
            Show
            <select>
                <option>10</option>
                <option>20</option>
                <option>50</option>
            </select>
            entries
        </div>
        <div>
            <table class="table table-bordered" id="tableStore">
                <thead>
                    <tr>
                        <th scope="col">STORE CD</th>
                        <th scope="col">STORE_NAME</th>
                        <th scope="col">INSERT USER</th>
                        <th scope="col">INSERT DATE</th>
                        <th scope="col">UPDATE USER</th>
                        <th scope="col">UPDATE DATE</th>
                        <th scope="col">DEL FLAG</th>
                        <th scope="col">FUNCTION</th>

                    </tr>
                    <tr>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td></td>
                        <td>
                            <button type="button" class="btn btn-success">Edit</button>
                            <button type="button" class="btn btn-danger">Delete</button>
                        </td>

                    </tr>
                </thead>
            </table>


        </div>
    </form>
</div>


