
@{
    ViewBag.Title = "Device";
    if (!(ViewContext.ViewBag.Title == "Login"))
    {
        Layout = "~/Views/Shared/_layout.cshtml";
    }

}

<div>
    <form>
        <div>
            <button type="button" class="btn btn-danger" data-toggle="modal" data-target="#staticBackdropDevice" id="addDevice">Add</button>
        </div>

        @*ModalAddDivice*@
        <div class="modal fade" id="staticBackdropDevice" data-backdrop="static" data-keyboard="false" tabindex="-1" role="dialog" aria-labelledby="staticBackdropLabel" aria-hidden="true">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h5 class="modal-title" id="staticBackdropLabel">Add record</h5>
                        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                            <span aria-hidden="true">&times;</span>
                        </button>
                    </div>
                    <div class="modal-body">
                        <table class="table table-borderless">
                            <tr>
                                <th scope="row">IMEI</th>
                                <td><input type="text" id="imeiID" class="text-primary" /></td>
                            </tr>
                            <tr>
                                <th scope="row">MODEL</th>
                                <td><input type="text" id="modelID" class="text-primary" /></td>
                            </tr>
                            <tr>
                                <th scope="row">MAKER</th>
                                <td><input type="text" id="makerID" class="text-primary" /></td>
                            </tr>
                            <tr>
                                <th scope="row">BUMON NAME</th>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Select Bumon
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <a class="dropdown-item" href="#">Action</a>
                                            <a class="dropdown-item" href="#">Another action</a>
                                            <a class="dropdown-item" href="#">Something else here</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                            <tr>
                                <th scope="row">Store Name</th>
                                <td>
                                    <div class="dropdown">
                                        <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                                            Select Store
                                        </button>
                                        <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                                            <a class="dropdown-item" href="#">Action</a>
                                            <a class="dropdown-item" href="#">Another action</a>
                                            <a class="dropdown-item" href="#">Something else here</a>
                                        </div>
                                    </div>
                                </td>
                            </tr>
                        </table>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-primary">Save</button>
                        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

        <div>
            Show
            <select>
                <option>10</option>
                <option>20</option>
                <option>50</option>
            </select>
            entries
        </div>
        <div>
            <table class="table table-bordered">
                <thead>
                    <tr>
                        <th scope="col">IMEI</th>
                        <th scope="col">TOKEN</th>
                        <th scope="col">MODEL</th>
                        <th scope="col">MAKER</th>
                        <th scope="col">BUMON NAME</th>
                        <th scope="col">STORE NAME</th>
                        <th scope="col">INSERT DATE</th>
                        <th scope="col">INSERT USER</th>
                        <th scope="col">UPDATE DATE</th>
                        <th scope="col">UPDATE USER</th>
                        <th scope="col">DEL FLAG</th>
                    </tr>
                </thead>
            </table>
        </div>
    </form>
</div>
