<body>
    <form id="login" method="post">
        @*@Html.AntiForgeryToken()
        @Html.ValidationSummary(true)*@
        <div><label><h2>Account Login</h2></label></div>
        <div>
            <input type="text" id="user" name="username" placeholder="User name" class="text" />
            @*@Html.TextBoxFor(a => a.)
