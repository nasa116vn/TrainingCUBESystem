@Model WebAPI.Models.SVR_USER;
@{
    ViewBag.Title = "Login";
    Layout = null;

}



<!DOCTYPE html>
<html lang="en" xmlns="http://www.w3.org/1999/xhtml">
<head runat="server">
    <meta charset="utf-8" />
    <title></title>
    <style type="text/css">
        body {
            text-align: center;
            background-color: lightcyan;
        }

        form {
            display: inline-block;
            margin-left: auto;
            margin-right: auto;
            background-color: white;
        }

        .button {
            color: white;
            background-color: royalblue;
            font-size: 20px;
        }

        .text {
            font-size: 20px;
        }
    </style>
